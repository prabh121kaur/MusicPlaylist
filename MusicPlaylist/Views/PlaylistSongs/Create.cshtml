@model CoreEntityFramework.Models.Playlist

<h2>Add Playlist</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlaylistColor"></label>
        <input asp-for="PlaylistColor" class="form-control" />
        <span asp-validation-for="PlaylistColor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsPrivate"></label>
        <input asp-for="IsPrivate" class="form-control" />
        <span asp-validation-for="IsPrivate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
