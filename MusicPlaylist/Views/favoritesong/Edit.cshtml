@model CoreEntityFramework.Models.FavoriteSong

<h2>Edit Favorite Song</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="FavoriteSongId" />
    <div class="form-group">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SongId"></label>
        <input asp-for="SongId" class="form-control" />
        <span asp-validation-for="SongId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
