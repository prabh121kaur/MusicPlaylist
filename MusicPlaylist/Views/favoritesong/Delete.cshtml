@model CoreEntityFramework.Models.FavoriteSong

<h2>Delete Favorite Song</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">User ID</dt>
            <dd class="col-sm-10">@Model.UserId</dd>
            <dt class="col-sm-2">Song ID</dt>
            <dd class="col-sm-10">@Model.SongId</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="FavoriteSongId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
