@model IEnumerable<CoreEntityFramework.Models.Song>

<h1>Songs</h1>

<p>
    <a asp-action="Create">Create New Song</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Album</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.Artist</td>
                <td>@song.Album</td>
                <td>@song.Genre</td>
                <td>@song.ReleaseDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@song.SongId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@song.SongId">Delete</a> |
                    <a asp-action="Details" asp-route-id="@song.SongId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
